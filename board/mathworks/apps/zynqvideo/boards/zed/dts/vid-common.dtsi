#include "zynq-mw-vid-common.dtsi"

&hdmitx{
    mwgen,vidinjust = "right";
	mwgen,vidinformat = "4:2:2,embedded";
};
	
&i2c0{			
    status = "okay";

	/*adv7511: adv7511@39 {
		compatible = "adi,adv7511";
		reg = <0x39>;
